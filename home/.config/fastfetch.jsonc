      "format": "┌─────────────── \u001b[1mHardware Information\u001b[0m ───────────────┐"
    },
    {
      "type": "cpu",
      "key": "  󰻠"
    },
    {
      "type": "gpu",
      "key": "  󰍛"
    },
    {
      "type": "memory",
      "key": "  󰑭"
    },
    {
      "type": "display",
      "key": "  󰍹"
    },
    {
      "type": "sound",
      "key": "  "
    },
    {
      "type": "gamepad",
      "key": "  "
    },
    {
      "type": "custom", // SoftwareStart
      "format": "├─────────────── \u001b[1mSoftware Information\u001b[0m ───────────────┤"
    },
    {
      "type": "title",
      "key": "  ",
      "format": "{1}@{2}"
    },
    {
      "type": "os",
      "key": "  " // Just get your distro's logo off nerdfonts.com
