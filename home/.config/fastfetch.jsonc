    {
      "type": "shell",
      "key": "  "
    },
    {
      "type": "terminal",
      "key": "  "
    },
    {
      "type": "theme",
      "key": "  󰉼"
    },
    {
      "type": "uptime",
      "key": "  󰅐"
    },
    {
      "type": "localip",
      "key": "  󰩟",
      "compact": true
    },
    {
      "type": "publicip",
      "key": "  󰩠"
    },
    {
      "type": "custom", // InformationEnd
      "format": "└────────────────────────────────────────────────────┘"
    },
    {
      "type": "colors",
      "paddingLeft": 2,
      "symbol": "circle"
    }
  ]
}
