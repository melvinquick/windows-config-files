        // Values for "portablePackageMachineRoot": 
            // "portablePackageMachineRoot": "%PROGRAMFILES%/WinGet/Packages/", //default

        // Values for "preferences":
            // "preferences": {
                // Values for "scope":
                    // "scope": "user",
                    // "scope": "machine",
                
                // Values for "locale": uses bcp47 language tag
                    // "locale": [ "en-US" ],
                
                // Values for "architectures": only architectures compatible with your system can be selected
                    // "architectures": ["x64"]
            // }
    },

    "uninstallBehavior": {
