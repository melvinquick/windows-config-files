    // For documentation on these settings, see: https://aka.ms/winget-settings
    
    "source": {
        // Values for "autoUpdateIntervalInMinutes": can be any positive integer
            // "autoUpdateIntervalInMinutes": 0 // disable
            // "autoUpdateIntervalInMinutes": 5 // default
    },

    "visual": {
        // Values for "progressBar":
            // "progressBar": "accent" // default
            // "progressBar": "retro"
            "progressBar": "rainbow"
    },

    "installBehavior": {
